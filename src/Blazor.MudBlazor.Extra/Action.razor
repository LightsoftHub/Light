<MudLink Class="@($"action-link {Class}")" Href="@Href" OnClick="@OnClick">@Name</MudLink>

@code {
    [Parameter]
    public string Name { get; set; } = null!;

    [Parameter]
    public string? Href { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public string? Class { get; set; }
}
